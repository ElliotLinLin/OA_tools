<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context="com.hst.mininurse.ui.RegisterActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="66dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:background="@drawable/white_shoke_rectangle"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35">
        <ImageView
            android:id="@+id/iv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_name_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="慧视通IM"
            android:textColor="#80ffff"
            android:textSize="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:background="@drawable/white_shoke_rectangle"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35">
        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_password_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_pwd"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pwd"
            android:layout_marginLeft="@dimen/dp_10"
            android:hint="密码"
            android:textColor="#80ffff"
            android:textSize="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignLeft="@id/rl_2"
        android:layout_alignRight="@id/rl_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/rl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_login"
            android:src="@drawable/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_regsiter"
            android:src="@drawable/btn_regsiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
